		있습니다. -->
			<select id="selectById" resultType="org.going.product.domain.ProductVo">
				select * from 
				product 
				where 
				productTypeId = #{productTypeId} 
			</select>
			
			<select id="selectAll" resultType="org.going.product.domain.ProductVo">
				select *
				from
				product
			</select>
			
